<body class="layout-h">
  <div class="wrapper">
    <!-- top navbar-->
    <header class="topnavbar-wrapper">
      <!-- START Top Navbar-->
      <nav class="navbar topnavbar" role="navigation">
        <!-- START navbar header-->
        <div class="navbar-header">
          <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">
            <div class="brand-logo">
              <%= image_tag "z-logo.png", class: "img-responsive" , alt: "App Logo" %>
            </div>
            <div class="brand-logo-collapsed">
              <%= image_tag "z-logo-single.png", class: "img-responsive", alt: "App Logo" %>
            </div>
          </a>
        </div>
        <!-- END navbar header-->
        <!-- START Nav wrapper-->
        <div class="navbar-collapse collapse">
          <!-- START Right Navbar-->
          <ul class="nav navbar-nav navbar-right">
            <!-- Fullscreen (only desktops)-->
            <li class="visible-lg">
              <a href="#" data-toggle-fullscreen="">
                <em class="fa fa-expand"></em>
              </a>
            </li>
          </ul>
          <!-- END Right Navbar-->
        </div>
        <!-- END Nav wrapper-->
      </nav>
      <!-- END Top Navbar-->
    </header>

    <!-- Main section-->
    <section>
      <!-- Page content-->
      <div class="content-wrapper">
        <h3>Result Tables
          <small>Tables, one step forward.</small>
        </h3>
        <div class="container-fluid">
          <!-- START RESULT DATATABLE-->
          <div class="row">
            <div class="col-lg-12">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <div class="value-section">
                    <div class="result-value">
                      <h3>Total</h3>
                      <span id="total" class="popspan"><%= number_to_currency(@progress_bar.total) %></span>
                    </div>
                    <div class="result-value">
                      <h3>Trade-in</h3> 
                      <span id="tradein" class="popspan"><%= number_to_currency(@progress_bar.tradein) %></span>
                    </div>
                    <div class="result-value">
                      <h3>Buy Back</h3>
                      <span id="buyback" class="popspan"><%= number_to_currency(@progress_bar.buyback) %></span>
                    </div>
                  </div>
                  <div class="show-option">
                    <div class="styled-select semi-square">
                      <select name="value-option" id="value-option">
                        <option value="all">Show All</option>
                        <option value="buyback">Buy Back</option>
                        <option value="tradein">Trade-in</option>
                      </select>
                    </div>
                    <div class="styled-select semi-square">
                      <select name="ltsf-option" id="ltsf-option"> 
                        <option value="all">Show All</option>
                        <option value="ltfsonly">LTSF only</option>
                      </select>
                    </div>
                  </div>
                </div>
                <div class="panel-body">
                  <div class="table-responsive">
                    <table class="table table-striped table-hover" id="result-datatable">
                      <thead>
                        <tr>
                          <th style="width:80px;">
                            <strong>MSKU</strong>
                          </th>
                          <th>
                            <strong>PRODUCT NAME</strong>
                          </th>
                          <th>
                            <strong>RANK</strong>
                          </th>
                          <th style="width:80px;">
                            <strong>DAYS</strong>
                          </th>
                          <th class="text-center">
                            <strong>LTSF</strong>
                          </th>
                          <th>
                            <strong>PRICE</strong>
                          </th>
                          <th>
                            <strong>TRADE</strong>
                          </th>
                          <th class="text-center">
                            <strong>CASH</strong>
                          </th>
                          <th></th>
                          <th></th>
                          <th class="text-center">
                            <strong>Mark</strong>
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- END RESULT DATATABLE -->
        </div>
      </div>
  </section>
  <script type="text/javascript">
    alert('Payment Done');

  var table =  $('#result-datatable').DataTable({
      'paging':   true,  // Table pagination
      'ordering': true,  // Column ordering
      'info':     true,  // Bottom left status text
      'responsive': true, // https://datatables.net/extensions/responsive/examples/
      "iDisplayLength" : 10,
      "processing": false,
      "serverSide": false,
      "scrollX": true,
      sAjaxSource: "/renderjson" + "?filename=" + "<%= @file_name %>",      
      aoColumns: [
        { mData: 'msku' },
        { mData: 'name' },
        { mData: 'rank' },
        { mData: 'days' },
        { mData: 'ltsf' },
        { mData: 'price' },
        { mData: 'tradein' },
        { mData: 'cash'},
        { mData: 'top_vendor', visible: false},
        { mData: 'tradeinurl', visible: false},
        {
          data: null,
          defaultContent: '',
          className: 'select-checkbox',
          orderable: false
        },
      ],
      "columnDefs": [ 
            {
              "targets": 7,//index of column starting from 0
              "render": function ( data, type, row, meta ) {
                  if(data != '' && data != null) {
                      return "<a href=\"https://www.bookfinder.com/buyback/search/#" + row.top_vendor + "\" target= \"_blank\"> " + data + "</a>";
                  }
                  else
                    return "No Offer";
              }
            },
            {
              "targets": 6,//index of column starting from 0
              "render": function ( data, type, row, meta ) {
                  if(data != '' && data != null) {
                    if ( type == "display") {
                      return "<a href=\"" + row.tradeinurl + "\" target = \"_blank\"> " + data + "</a>";
                    }
                    else 
                      return data;
                  } 
                  else
                    return "No Offer";
              }
            },
            {
              "targets": 4,
              "render": function(data, type, row, meta) {
                if (data == true) {
                  if (type == "display") {
                    return "&#9989;" ;
                  } else {
                    return true;
                  }
                }
                else 
                  return "&#10080;" ;
              }
            } 
        ],
      // Text translation options
      // Note the required keywords between underscores (e.g _MENU_)
      oLanguage: {
        sSearch:      'Search all columns:',
        sLengthMenu:  '_MENU_',
        info:         'Showing page _PAGE_ of _PAGES_',
        zeroRecords:  'Nothing found - sorry',
        infoEmpty:    'No records available',
        infoFiltered: '(filtered from _MAX_ total records)',
        pageLength: '10'
      },
      // Datatable Buttons setup
      dom: '<"html5buttons"B>lTfgitp',
      select: {
        style:    'multi',
        selector: 'td:last-child'
      },
      buttons: [
      {extend: 'csv',   className: 'btn-sm' },
      {extend: 'excel', className: 'btn-sm', title: 'XLS-File'},
      {extend: 'pdf',   className: 'btn-sm', title: $('title').text() },
      ]
    });


  var value_regex =     "(0*[1-9][0-9]*(\.[0-9]+)?|0+\.[0-9]*[1-9][0-9]*)";
  
  $('#value-option').change(function(){
    value = $( "#value-option option:selected").text();

    if (value == "Buy Back") {
      table
        .column(7)
        .search(value_regex, true)
        .draw();
      table
        .column(6)
        .search("")
        .draw();
    } else if (value == "Trade-in") {
      table
        .column(6)
        .search(value_regex, true)
        .draw();
      table
        .column(7)
        .search("")
        .draw();
    } else {
      table
        .column(6)
        .search("")
        .draw();
      table
      .column(7)
      .search("")
      .draw();
    } 
  });

  $('#ltsf-option').change(function() {
    value = $( "#ltsf-option option:selected").text();

    if (value == "Show All") {
      value = "";
      table
        .column(4)
        .search(value)
        .draw();
    } else {
      value = true;
      table
        .column(4)
        .search(value)
        .draw();
    } 
  });
  </script>
