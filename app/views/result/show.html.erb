<body class="layout-h">
  <div class="wrapper">
    <!-- top navbar-->
    <header class="topnavbar-wrapper">
      <!-- START Top Navbar-->
      <nav class="navbar topnavbar" role="navigation">
        <!-- START navbar header-->
        <div class="navbar-header">
          <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">
            <div class="brand-logo">
              <%= image_tag "z-logo.png", class: "img-responsive" , alt:"App Logo" %>
            </div>
            <div class="brand-logo-collapsed">
              <%= image_tag "z-logo-single.png", class: "img-responsive", alt:"App Logo" %>
            </div>
          </a>
        </div>
        <!-- END navbar header-->
        <!-- START Nav wrapper-->
        <div class="navbar-collapse collapse">
          <!-- START Right Navbar-->
          <ul class="nav navbar-nav navbar-right">
            <!-- Fullscreen (only desktops)-->
            <li class="visible-lg">
              <a href="#" data-toggle-fullscreen="">
                <em class="fa fa-expand"></em>
              </a>
            </li>
          </ul>
          <!-- END Right Navbar-->
        </div>
        <!-- END Nav wrapper-->
      </nav>
      <!-- END Top Navbar-->
    </header>

    <!-- Main section-->
    <section>
      <!-- Page content-->
      <div class="content-wrapper">
        <h3>Result Tables
          <small>Tables, one step forward.</small>
        </h3>
        <div class="container-fluid">
          <!-- START RESULT DATATABLE-->
          <div class="row">
            <div class="col-lg-12">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <div class="value-section">
                    <div class="result-value">
                      <h3>Total</h3>
                      <span id="total" class="popspan"><%= number_to_currency(@progress_bar.total) %></span>
                    </div>
                    <div class="result-value">
                      <h3>Trade-in</h3> 
                      <span id="tradein" class="popspan"><%= number_to_currency(@progress_bar.tradein) %></span>
                    </div>
                    <div class="result-value">
                      <h3>Buy Back</h3>
                      <span id="buyback" class="popspan"><%= number_to_currency(@progress_bar.buyback) %></span>
                    </div>
                  </div>
                  <div class="show-option">
                    <div class="styled-select semi-square">
                      <select name="value-option" id="value-option">
                        <option value="all">Show All</option>
                        <option value="buyback">Buy Back</option>
                        <option value="tradein">Trade-in</option>
                      </select>
                    </div>
                    <div class="styled-select semi-square">
                      <select name="ltsf-option" id="ltsf-option"> 
                        <option value="all">Show All</option>
                        <option value="ltfsonly">LTSF only</option>
                      </select>
                    </div>
                  </div>
                </div>
                <div class="panel-body">
                  <div class="table-responsive">
                    <table class="table table-striped table-hover" id="result-datatable">
                      <thead>
                        <tr>
                          <th style="width:80px;">
                            <strong>MSKU</strong>
                          </th>
                          <th>
                            <strong>PRODUCT NAME</strong>
                          </th>
                          <th>
                            <strong>RANK</strong>
                          </th>
                          <th style="width:80px;">
                            <strong>DAYS</strong>
                          </th>
                          <th class="text-center">
                            <strong>LTSF</strong>
                          </th>
                          <th>
                            <strong>PRICE</strong>
                          </th>
                          <th>
                            <strong>TRADE</strong>
                          </th>
                          <th class="text-center">
                            <strong>CASH</strong>
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- END RESULT DATATABLE -->
        </div>
      </div>
  </section>
